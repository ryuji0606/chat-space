.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-box
      .chat-main__group-info__left-box__group-name
        = @group.name
      .chat-main__group-info__left-box__members
        .chat-main__group-info__left-box__members__member Memberï¼š
        .chat-main__group-info__left-box__members__member-name
          - @group.group_users.each do |group_user|
            = group_user.user.name

    = link_to edit_group_path(@group.id), class: "chat-main__group-info__edit-btn" do
      .chat-main__group-info__edit__btn
        Edit


  .chat-main__messages
    = render @messages



  .chat-main__form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'chat-main__form__new-message__input-box__text', placeholder: 'type a message'
      .chat-main__form__new-message__input-box
        = f.label :image, class: 'chat-main__form__new-message__input-box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'chat-main__form__new-message__input-box__image__file'
      = f.submit 'Send', class: 'chat-main__form__new-message__submit-btn'

